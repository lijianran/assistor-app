{
  "build": {
    "beforeDevCommand": "yarn dev",
    "beforeBuildCommand": "yarn build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "AssistorApp",
    "version": "../package.json"
  },
  "tauri": {
    "allowlist": {
      "all": true,
      "fs": {
        "scope": [
          "**"
        ]
      }
    },
    "bundle": {
      "active": true,
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.assistor.app",
      "targets": "all"
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": true,
      "endpoints": [
        "https://github.com/lijianran/hanzi_tools/releases/download/{{current_version}}/latest.json"
      ],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDRDREM4MTkwRjQ1NUNDRDAKUldUUXpGWDBrSUhjVE5xYUtFcDFIZ2FVL3VRdmZFY29BMURwbGZLZmtjdS9zRjc2b0c0NXRwR1EK"
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "assistor-app",
        "width": 800,
        "height": 600
      }
    ]
  }
}